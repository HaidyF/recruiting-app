<%= form_for (@job) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
 <br />
  <%= f.label :recruiter %> <%= f.collection_select :recruiter_id, Recruiter.all, :id, :title, include_blank: true %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />
  <%= f.label :experience %>
  <%= f.text_field :experience %>
  <br />

  <%= f.submit %>
<% end %>